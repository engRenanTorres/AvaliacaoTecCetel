@model MVCCitel.Models.AddCategoryViewModel
@{
}

<h1>Adicione uma categoria</h1>
<form method="post" action="Add">
    <div class="mb-3">
        <label for="CategoryName" class="form-label">Nome</label>
        <input type="text" class="form-control" id="CategoryName" asp-for="Name">
        <div id="CategoryNameHelp" class="form-text">Os nomes de cada categoria devem ser únicos.</div>
    </div>
    <div class="mb-3">
        <label for="CategoryDescription" class="form-label">Descrição</label>
        <input type="text" class="form-control" id="CategoryDescription" asp-for="Description">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
