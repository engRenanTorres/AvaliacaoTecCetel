@model MVCCitel.Models.UpdateCategoryViewModel
@{
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Edite a Categoria</h3></div>
                            <div class="card-body">
                                <form method="post" action="View">
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                <input class="form-control" id="inputId" type="number" asp-for="Id" readonly/>
                                                <label for="inputId" >Id</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                <input class="form-control" id="inputFirstName" type="text" asp-for="Name"/>
                                                <label for="inputFirstName" >Nome</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input class="form-control" asp-for="Description" id="inputDescription" type="text"  />
                                                <label for="inputDescription" >Descrição</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input class="form-control" asp-for="CreatedAt" id="inputDate" type="date" readonly />
                                                <label for="inputDate" >Criado em</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="container-fluid px-4">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mt-4 mb-0">
                                                    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Category"><i class="fas fa-remove me-1"></i>Delete</button>
                                                </div>     
                                            </div>
                                            <div class="col-md-6 text-end">
                                                <div class="mt-4 mb-0">
                                                    <button type="submit" class="btn btn-success"><i class="fas fa-save me-1"></i> Editar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
